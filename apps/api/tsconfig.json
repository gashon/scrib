{
  "extends": "@scrib/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@scrib/api/*": ["./src/*"],
      "@scrib/db/*": ["../../packages/db/src/*"]
    },
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["src/**/*", "src/types/**/*.d.ts"],
  "exclude": ["node_modules"],
  "types": ["node", "jest", "express"]
}
